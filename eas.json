{
  "cli": {
    "version": ">=3.15.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "channel": "main",
      "hooks": {
        "pre-install": "bash -lc 'cd ios && rm -rf Pods Podfile.lock && pod install --repo-update'"
      }
    }
  },
  "submit": {
    "production": {}
  }
}